{
	"name": "oidc-loki",
	"version": "0.1.3",
	"description": "Security Chaos Engineering tool for OIDC - A Bad Identity Provider",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"oidc-loki": "dist/cli.js"
	},
	"files": ["dist", "LICENSE", "README.md"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oidc-loki/oidc-loki.git"
	},
	"homepage": "https://github.com/oidc-loki/oidc-loki#readme",
	"bugs": {
		"url": "https://github.com/oidc-loki/oidc-loki/issues"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./plugins": {
			"import": "./dist/plugins/built-in/index.js",
			"types": "./dist/plugins/built-in/index.d.ts"
		}
	},
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"test": "vitest",
		"test:run": "vitest run",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"keywords": ["oidc", "oauth2", "security", "chaos-engineering", "testing", "identity"],
	"author": "oidc-loki contributors",
	"license": "CC-BY-NC-SA-4.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"better-sqlite3": "^12.6.2",
		"hono": "^4.6.0",
		"jose": "^5.9.0",
		"nanoid": "^5.0.0",
		"oidc-provider": "^9.6.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.0.0",
		"@types/oidc-provider": "^9.5.0",
		"@vitest/coverage-v8": "^4.0.17",
		"tsx": "^4.19.0",
		"typescript": "^5.6.0",
		"vitest": "^4.0.17"
	}
}
